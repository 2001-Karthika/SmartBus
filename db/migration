CREATE TABLE
    admin (
        id int not null auto_increment,
        name text not null,
        username text not null,
        password text not null,
        user_type tinyint not null,
        email text not null,
        ph_num text not null,
        primary key(id)
    );

CREATE TABLE
    passenger (
        id int not null auto_increment,
        name text not null,
        username varchar(100) not null UNIQUE KEY,
        password text not null,
        user_type tinyint not null,
        email text not null,
        ph_num text not null,
        primary key(id)
    );
    CREATE TABLE
    bus (
        id int not null auto_increment,
        bus_number text not null,
        busfrom text not null ,
        busto text not null,
        uuid text not null,
        crowd int,
        primary key(id)
    )

    